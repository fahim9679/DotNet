@model DotNet.UI.ViewModels.StudentViewModels.EditStudentViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Student</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StudentName" class="control-label"></label>
                <input asp-for="StudentName" class="form-control" />
                <span asp-validation-for="StudentName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhysicalAddress.StreetAddressLine1" class="control-label"></label>
                <input asp-for="PhysicalAddress.StreetAddressLine1" class="form-control" />
                <span asp-validation-for="PhysicalAddress.StreetAddressLine1" class="text-danger"></span>
            </div><div class="form-group">
                <label asp-for="PhysicalAddress.StreetAddressLine2" class="control-label"></label>
                <input asp-for="PhysicalAddress.StreetAddressLine2" class="form-control" />
                <span asp-validation-for="PhysicalAddress.StreetAddressLine2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhysicalAddress.Pincode" class="control-label"></label>
                <input asp-for="PhysicalAddress.Pincode" class="form-control" />
                <span asp-validation-for="PhysicalAddress.Pincode" class="text-danger"></span>
            </div>
            <div class="row">
                <label  class="control-label">Student Skills</label>
                @for (int i = 0; i < Model.SkillList.Count; i++)
                {
                    <div class="col-6">
                        <input type="hidden" asp-for="@Model.SkillList[i].SkillId" />
                        <input type="checkbox" asp-for="@Model.SkillList[i].IsChecked" />
                        @Model.SkillList[i].SkillName
                    </div>
                    @if(i+1%2==0)
                    {
                        @:</div><div class="row">
                    }
                }
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

