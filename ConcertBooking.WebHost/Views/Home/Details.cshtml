@model ConcertBooking.WebHost.ViewModels.HomeConcertViewModels.HomeConcertDetailsViewModel

<div class="row">
    <div class="col-4">
        <img src="@Model.ConcertImage" alt="Concert Image" class="m-3" width="400px" />
    </div>
    <div class="col-8">
        <div>Concert Id: @Model.ConcertId</div>
        <div>Concert Name: @Model.ConcertName</div>
        <div>Description: @Model.Description</div>
        <div>Venue Name: @Model.VenueName</div>
        <div>Venue Address: @Model.VenueAddress</div>
        <div>Venue Date & Time: @Model.ConcertDateTime.ToString("MMm dd yyyy hh:mm tt")</div>
        <div class="mt-2"><img src="@Model.ArtistImage" class="rounded-circle img-fluid" style="width:150px;height:150px" /> </div>
        <div>Artist Namee: @Model.ArtistName</div>
        <div class="mt-3"><a class="btn btn-success" asp-action="AvailableTikets" asp-route-id="@Model.ConcertId">See Available Tickets</a></div>

    </div>
</div>

<div>
    @Html.ActionLink("Edit", "Edit", new { /* id = Model.PrimaryKey */ }) |
    <a asp-action="Index">Back to List</a>
</div>
